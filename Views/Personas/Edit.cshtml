@model TMecanicoC.Models.Personas

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Modificar información de la persona</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DocIdentificacion" />
            <div class="form-group">
                <label asp-for="Nombres" class="control-label"></label>
                <input asp-for="Nombres" class="form-control" />
                <span asp-validation-for="Nombres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apellidos" class="control-label"></label>
                <input asp-for="Apellidos" class="form-control" />
                <span asp-validation-for="Apellidos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Credencial" class="control-label"></label>
                <input asp-for="Credencial" class="form-control" />
                <span asp-validation-for="Credencial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdRol" class="control-label"></label>
                <select asp-for="IdRol" class="form-control" asp-items="ViewBag.IdRol"></select>
                <span asp-validation-for="IdRol" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CiudadDireccion" class="control-label"></label>
                <input asp-for="CiudadDireccion" class="form-control" />
                <span asp-validation-for="CiudadDireccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CorreoNivelEstudio" class="control-label"></label>
                <input asp-for="CorreoNivelEstudio" class="form-control" />
                <span asp-validation-for="CorreoNivelEstudio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardo las modificaciones?" class="btn btn-primary" /> |
                <a asp-action="Index">Volver a listar</a>
            </div>
        </form>
    </div>
</div>

